{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "schematics": {
    "@schematics/angular:component": {
      "inlineStyle": true,
      "inlineTemplate": true,
      "standalone": true
    }
  },
  "projects": {
    "gandam-ui": {
      "projectType": "library",
      "root": "projects/gandam-ui",
      "sourceRoot": "projects/gandam-ui/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/gandam-ui/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/gandam-ui/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/gandam-ui/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/gandam-ui/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    }
  }
}
